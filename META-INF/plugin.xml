<idea-plugin version="2">
    <id>com.afcastano.intellij.autovalue</id>
    <name>AutoValue plugin</name>
    <version>0.0.7</version>
    <vendor email="andresfelipecastano@gmail.com" url="https://github.com/afcastano/AutoValuePlugin">AutoValue plugin</vendor>

    <description><![CDATA[
      Provides context menu options to generate and manipulate classes annotated with @AutoValue.
      -- Also works with @AutoParcel and @AutoParcelGson annotations.
    ]]></description>

    <change-notes><![CDATA[
      Full changelog: https://github.com/afcastano/AutoValuePlugin/blob/master/CHANGELOG.md
    ]]>
    </change-notes>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
    <idea-version since-build="131"/>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>com.afcastano.intellij.autovalue.intentions.AddBuilderIntention</className>
            <category>Java/AutoValue</category>
        </intentionAction>
        <intentionAction>
            <className>com.afcastano.intellij.autovalue.intentions.UpdateBuilderIntention</className>b
            <category>Java/AutoValue</category>
        </intentionAction>
    </extensions>

    <actions>
        <action id="com.afcastano.intellij.autovalue.AddMissingMethodsToBuilderAction" class="com.afcastano.intellij.autovalue.actions.GenerateAutoValueAction"
                text="AutoValue builder"
                description="Generates the auto value builder from the abstract methods">
            <add-to-group group-id="GenerateGroup" anchor="first" />
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

    <application-components>
        <!-- Add your application components here -->
    </application-components>

    <project-components>
    </project-components>
</idea-plugin>
